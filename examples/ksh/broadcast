
#MTOOL autolog
#MTOOL set jobname=foo

set -ax
cd $TMPDIR

#------------------------------------------------------------------------------
#MTOOL step id=compute
#------------------------------------------------------------------------------

NUM1=123
NUM2=$(($NUM1+5))

#------------------------------------------------------------------------------
#MTOOL broadcast id=[next:id] vars=NUM1,NUM2

#------------------------------------------------------------------------------
#MTOOL step id=display
#------------------------------------------------------------------------------

echo $NUM1 + 5 = $NUM2 according to [prev:id]

#------------------------------------------------------------------------------
#MTOOL common
#------------------------------------------------------------------------------

echo This is the end
